{#include ms_teams/Common/commonMsAdaptiveCardHighLevelStructure.json}
  {#content-intro}There {#if data.events.size() == 1}is 1 security update{#else}are {data.events.size()} security updates{/if} affecting your subscriptions.{/content-intro}
  {#severity-label}Highest severity:{/severity-label}
  {#content-body}
    {#if data.events.size() > 3}
    {
      "type":"TextBlock",
      "text":"First 3 are:",
      "wrap":true,
      "spacing":"Small"
    },
    {/if}
    {#each data.events}
    {#if it_index < 3}
    {
      "type":"ColumnSet",
      "separator": {it_isFirst},
      "columns":[
        {
          "type":"Column",
          "width":"auto",
          "items":[
            {
            "type":"TextBlock",
            "text":"{it.payload.severity.or('UNDEFINED').asSeverityEmoji}",
            "size":"Medium"
            }
          ]
        },
        {
          "type":"Column",
          "width":"stretch",
          "items":[
            {
              "type":"TextBlock",
              "text":"[{it.payload.id}]({data.context.base_url}{it.payload.id}?from=notifications&integration=teams)",
              "wrap":true,
              "weight":"Bolder"
            },
            {
              "type":"TextBlock",
              "text":"{it.payload.synopsis}",
              "wrap":true
            }
          ]
        }
      ]
    },
    {/if}
    {/each}
  {/content-body}
  {#explore-location}errata search{/explore-location}
  {#action-url}https://access.redhat.com/errata-search/?from=notifications&integration=teams{/action-url}
  {#action-title}Search errata{/action-title}
{/include}
