{#include ms_teams/Common/commonMsAdaptiveCardHighLevelStructure.json}
{#content-body}
{
  "type":"TextBlock",
  "text":"Enhancements - Errata - Subscription Services",
  "wrap":true,
  "size":"Medium",
  "weight":"Bolder"
},
{
  "type":"TextBlock",
  "text":"There are {data.events.size()} {#if data.events.size() == 1}enhancement{#else}enhancements{/if} affecting your subscriptions.",
  "wrap":true
},
{#if data.events.size() > 3}
{
  "type":"TextBlock",
  "text":"First 3 are:",
  "wrap":true,
  "spacing":"Small"
},
{/if}
{#each data.events}
{#if it_index < 3}
{
  "type":"ColumnSet",
  "separator": {it_isFirst},
  "columns":[
    {
      "type":"Column",
      "width":"auto",
      "items":[
        {
        "type":"TextBlock",
        "text":"\u2699\uFE0F",
        "size":"Medium"
        }
      ]
    },
    {
      "type":"Column",
      "width":"stretch",
      "items":[
        {
          "type":"TextBlock",
          "text":"[{it.payload.id}]({data.context.base_url}{it.payload.id}?from=notifications&integration=teams)",
          "wrap":true,
          "weight":"Bolder"
        },
        {
          "type":"TextBlock",
          "text":"{it.payload.synopsis}",
          "wrap":true
        }
      ]
    }
  ]
},
{/if}
{/each}
{
  "type":"TextBlock",
  "separator":true,
  "text":"Explore these and others in the [errata search](https://access.redhat.com/errata-search/?from=notifications&integration=teams)",
  "wrap":true,
  "spacing":"Medium"
}
{/content-body}
