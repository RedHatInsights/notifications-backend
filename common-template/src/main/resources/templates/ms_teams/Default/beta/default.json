{#include ms_teams/Common/commonMsAdaptiveCardHighLevelStructure.json}
{#content-body}
{
    "type": "TextBlock",
    "text": "{data.source.event_type.display_name} - {data.source.application.display_name} - {data.source.bundle.display_name}",
    "style": "heading",
    "wrap": true
},
{#if data.severity??}
{
    "type": "Badge",
    "text": "{data.severity.asSeverityEmoji} Severity: {data.severity.toTitleCase}",
    "size": "Large",
    {#if data.severity.toUpperCase == "CRITICAL"}
    "style": "Attention",
    "appearance": "Tint"
    {#else}
    "style": "Subtle"
    {/if}
},
{/if}
{
    "type": "TextBlock",
    "text": "{#if data.context.display_name??}[{data.context.display_name}]({data.inventory_url.raw}) triggered {data.events.size()} event{#if data.events.size() != 1}s{/if}{#else}{data.events.size()} event{#if data.events.size() != 1}s{/if} triggered{/if}.",
    "wrap": true
},
{
    "type": "TextBlock",
    "text": "Explore {#if data.events.size() != 1}these{#else}this{/if} and others in **{data.source.application.display_name}**.",
    "wrap": true,
    "spacing": "Padding",
    "separator": true
},
{
    "type": "ActionSet",
    "actions": [
        {
            "type": "Action.OpenUrl",
            "url": "{data.application_url.raw}",
            "title": "Open {data.source.application.display_name}"
        }
    ]
}
{/content-body}