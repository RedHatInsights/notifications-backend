{#include google_chat/Common/commonCardsV2.json}
{#content-body}
"header": {
  "title": "{data.source.event_type.display_name} - {data.source.application.display_name} - {data.source.bundle.display_name}"
},
"sections": [
  {
    "collapsible": false,
    "widgets": [
      {#if data.severity??}
      {#include google_chat/Common/severityDecoratedText.json /}
      {/if}
      {
        "textParagraph": {
          "text": "{#if data.context.display_name??}<a href=\"{data.inventory_url.raw}\">{data.context.display_name}</a> triggered {data.events.size()} event{#if data.events.size() != 1}s{/if}{#else}{data.events.size()} event{#if data.events.size() != 1}s{/if} triggered{/if}."
        }
      },
      {
        "divider": {}
      },
      {
        "textParagraph": {
          "text": "Explore {#if data.events.size() != 1}these{#else}this{/if} and others in <b>{data.source.application.display_name}</b>."
        }
      },
      {
        "buttonList": {
          "buttons": [
            {
              "text": "Open {data.source.application.display_name}",
              "type": "FILLED",
              "color": {
                "red": 0,
                "green": 0.396,
                "blue": 0.796
              },
              "onClick": {
                "openLink": {
                  "url": "{data.application_url.raw}"
                }
              }
            }
          ]
        }
      }
    ]
  }
]
{/content-body}
{/include}
