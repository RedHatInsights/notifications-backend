{#include slack/Common/beta/commonSlackBlocks.json}
    {#severity-label}Highest severity:{/severity-label}
    {#content-intro}There {#if data.events.size() == 1}is 1 security update{#else}are {data.events.size()} security updates{/if} affecting your subscriptions.{#if data.events.size() > 3}\nFirst 3 are:{/if}{/content-intro}
    {#content-body}
        {#each data.events}
        {#if it_index < 3}
        {
            "type": "section",
            "text": {
                "type": "mrkdwn",
                "text": "{it.payload.severity.or('UNDEFINED').asSeverityEmoji} <{data.context.base_url}{it.payload.id}?from=notifications&integration=slack|*{it.payload.id}*>\n{it.payload.synopsis}"
            }
        },
        {/if}
        {/each}
        {
            "type": "divider"
        },
    {/content-body}
    {#explore-url}https://access.redhat.com/errata-search/?from=notifications&integration=slack{/explore-url}
    {#explore-location}errata search{/explore-location}
{/include}
