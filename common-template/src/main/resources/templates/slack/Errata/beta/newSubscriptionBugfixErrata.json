    "blocks": [
        {
            "type": "section",
            "text": {
                "type": "mrkdwn",
                "text": "*Bug Fixes - Errata - Subscription Services*"
            }
        },
        {
            "type": "section",
            "text": {
                "type": "mrkdwn",
                "text": "There are {data.events.size()} bug {#if data.events.size() == 1}fix{#else}fixes{/if} affecting your subscriptions.{#if data.events.size() > 3}\nFirst 3 are:{/if}"
            }
        },
        {
            "type": "divider"
        },
        {#each data.events}
        {#if it_index < 3}
        {
            "type": "section",
            "text": {
                "type": "mrkdwn",
                "text": "\uD83D\uDD27 <{data.context.base_url}{it.payload.id}?from=notifications&integration=slack|*{it.payload.id}*>\n{it.payload.synopsis}"
            }
        },
        {/if}
        {/each}
        {
            "type": "divider"
        },
        {
            "type": "section",
            "text": {
                "type": "mrkdwn",
                "text": "Explore these and others in the <https://access.redhat.com/errata-search/?from=notifications&integration=slack|errata search>."
            }
        }
    ]
