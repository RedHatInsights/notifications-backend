{
    "blocks": [
        {
            "type": "header",
            "text": {
                "type": "plain_text",
                "text": "Enhancements - Errata - Subscription Services",
                "emoji": true
            }
        },
        {#if data.severity??}
        {
            "type": "context",
            "elements": [
                {
                    "type": "mrkdwn",
                    "text": "{data.severity.asSeverityEmoji} Severity: {data.severity.toTitleCase}"
                }
            ]
        },
        {/if}
        {
            "type": "section",
            "text": {
                "type": "mrkdwn",
                "text": "There {#if data.events.size() == 1}is 1 enhancement{#else}are {data.events.size()} enhancements{/if} affecting your subscriptions.{#if data.events.size() > 3}\nFirst 3 are:{/if}"
            }
        },
        {
            "type": "divider"
        },
        {#each data.events}
        {#if it_index < 3}
        {
            "type": "section",
            "text": {
                "type": "mrkdwn",
                "text": "\u2699\uFE0F <{data.context.base_url}{it.payload.id}?from=notifications&integration=slack|*{it.payload.id}*>\n{it.payload.synopsis}"
            }
        },
        {/if}
        {/each}
        {
            "type": "divider"
        },
        {
            "type": "section",
            "text": {
                "type": "mrkdwn",
                "text": "Explore {#if data.events.size() != 1}these{#else}this{/if} and others in the <https://access.redhat.com/errata-search/?from=notifications&integration=slack|errata search>."
            }
        }
    ]
}
